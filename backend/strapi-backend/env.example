# Server Configuration
HOST=0.0.0.0
PORT=1337
NODE_ENV=development

# Strapi Security Keys (MUST be generated uniquely)
# Generate using: openssl rand -base64 32
APP_KEYS=GENERATE_YOUR_APP_KEYS_HERE
API_TOKEN_SALT=GENERATE_YOUR_TOKEN_SALT_HERE
ADMIN_JWT_SECRET=GENERATE_YOUR_ADMIN_SECRET_HERE
TRANSFER_TOKEN_SALT=GENERATE_YOUR_TRANSFER_SALT_HERE
JWT_SECRET=GENERATE_YOUR_JWT_SECRET_HERE

# Email Hashing Secret (CRITICAL for GDPR compliance)
# Generate using: openssl rand -hex 64
EMAIL_HASH_SECRET=GENERATE_64_CHARACTER_HEX_STRING_HERE

# OAuth2 Google Configuration
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:1337/api/connect/google/callback

# URLs
PUBLIC_URL=http://localhost:1337
FRONTEND_URL=http://localhost:5173

# Database (SQLite by default)
DATABASE_CLIENT=sqlite
DATABASE_FILENAME=.tmp/data.db

# Redis (Optional - для rate limiting и sessions)
# Если не указано, будет использоваться in-memory storage
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Session Secret (для будущих сессий)
SESSION_SECRET=GENERATE_YOUR_SESSION_SECRET_HERE

