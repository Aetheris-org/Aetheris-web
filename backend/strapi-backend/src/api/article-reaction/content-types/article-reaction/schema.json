{
  "kind": "collectionType",
  "collectionName": "article_reactions",
  "info": {
    "displayName": "Article Reaction",
    "singularName": "article-reaction",
    "pluralName": "article-reactions",
    "description": "User reactions (like/dislike) to articles"
  },
  "options": {
    "draftAndPublish": false
  },
  "attributes": {
    "reaction": {
      "type": "enumeration",
      "enum": ["like", "dislike"],
      "required": true
    },
    "user": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user"
    },
    "article": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::article.article"
    },
    "publishedAt": {
      "type": "datetime"
    }
  }
}

