{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "singularName": "article",
    "pluralName": "articles",
    "displayName": "Article",
    "description": "Articles content type with reactions, bookmarks, and comments"
  },
  "options": {
    "draftAndPublish": true,
    "comment": ""
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "maxLength": 255
    },
    "content": {
      "type": "text",
      "required": true
    },
    "excerpt": {
      "type": "text",
      "required": false
    },
    "author": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "articles"
    },
    "tags": {
      "type": "json",
      "default": []
    },
    "preview_image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "difficulty": {
      "type": "enumeration",
      "enum": ["easy", "medium", "hard"],
      "default": "medium"
    },
    "likes_count": {
      "type": "integer",
      "default": 0,
      "min": 0
    },
    "dislikes_count": {
      "type": "integer",
      "default": 0,
      "min": 0
    },
    "comments_count": {
      "type": "integer",
      "default": 0,
      "min": 0
    },
    "comments": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::comment.comment",
      "mappedBy": "article"
    },
    "bookmarks": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::article-bookmark.article-bookmark",
      "mappedBy": "article"
    }
  }
}

