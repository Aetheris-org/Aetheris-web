{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "singularName": "article",
    "pluralName": "articles",
    "displayName": "Article",
    "description": "User-created articles with rich text content"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "content-manager": {
      "visible": true
    },
    "content-type-builder": {
      "visible": true
    }
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "minLength": 10,
      "maxLength": 200
    },
    "content": {
      "type": "richtext",
      "required": true,
      "minLength": 100,
      "maxLength": 20000
    },
    "excerpt": {
      "type": "text",
      "maxLength": 500
    },
    "tags": {
      "type": "json",
      "required": false
    },
    "difficulty": {
      "type": "enumeration",
      "enum": ["easy", "medium", "hard"],
      "default": "medium",
      "required": true
    },
    "preview_image": {
      "type": "string",
      "required": false
    },
    "author": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "required": true
    },
    "likes_count": {
      "type": "integer",
      "default": 0,
      "min": 0
    },
    "dislikes_count": {
      "type": "integer",
      "default": 0,
      "min": 0
    },
    "views": {
      "type": "integer",
      "default": 0,
      "min": 0
    }
  }
}

