{
  "kind": "collectionType",
  "collectionName": "notifications",
  "info": {
    "singularName": "notification",
    "pluralName": "notifications",
    "displayName": "Notification",
    "description": "User notifications for various events"
  },
  "options": {
    "draftAndPublish": false,
    "comment": ""
  },
  "pluginOptions": {},
  "attributes": {
    "user": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "notifications"
    },
    "type": {
      "type": "enumeration",
      "enum": [
        "comment_reply",
        "article_like",
        "comment_like",
        "article_milestone",
        "comment_on_article"
      ],
      "required": true
    },
    "title": {
      "type": "string",
      "required": true,
      "maxLength": 255
    },
    "message": {
      "type": "text",
      "required": true
    },
    "is_read": {
      "type": "boolean",
      "default": false
    },
    "related_article": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::article.article"
    },
    "related_comment": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::comment.comment"
    }
  }
}

