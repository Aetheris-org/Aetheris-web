{
  "kind": "collectionType",
  "collectionName": "notifications",
  "info": {
    "displayName": "Notification",
    "singularName": "notification",
    "pluralName": "notifications",
    "description": "User notifications triggered by platform events"
  },
  "attributes": {
    "user": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user"
    },
    "type": {
      "type": "enumeration",
      "enum": [
        "article_published",
        "comment_reply",
        "reaction_received",
        "system"
      ],
      "default": "system",
      "required": true
    },
    "title": {
      "type": "string",
      "required": true
    },
    "message": {
      "type": "text",
      "required": true
    },
    "is_read": {
      "type": "boolean",
      "default": false
    },
    "related_article": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::article.article"
    },
    "related_comment": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::comment.comment"
    },
    "publishedAt": {
      "type": "datetime"
    }
  }
}

