# Секрет для Payload (обязателен)
PAYLOAD_SECRET=please-change-me

# Публичный URL сервера (для построения ссылок)
PAYLOAD_PUBLIC_SERVER_URL=http://localhost:4000

# Админ-панель (по умолчанию совпадает с сервером)
PAYLOAD_PUBLIC_ADMIN_URL=http://localhost:4000/admin

# Порт Express-сервера
PORT=4000

# Путь к базе SQLite (можно указать абсолютный путь)
DATABASE_URL=file:./payload-data.sqlite

# Google OAuth (заполнить позже)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=http://localhost:4000/oauth/google/callback
